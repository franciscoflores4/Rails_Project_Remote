<% @page_title = "UserAuth | Signup" %>
<div class="Sign_Form">
  <h1>Sign Up</h1>
  <% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
  <% end %>
  <%= form_tag do %>
  	<p><%= label_tag :name, "name:" %><%= text_field_tag :name, params[:name] %></p></br> 
 	<p><%= label_tag :password, "password:" %><%= text_field_tag :password, params[:password] %></p></br> 
 	<p><%= submit_tag "login" %></p></br> 
  <% end %>
  <%= form_for(:login, :url => {:controller => 'session', :action => 'new'}) do |f| %>
    <p> First Name:</br> <%= f.text_field :first_name%> </p>
    <p> Last Name:</br> <%= f.text_field :last_name%> </p>
    <p> Email:</br> <%= f.text_field :email%> </p>
    <p> Password:</br> <%= f.password_field :password%></p>
    <p> Password Confirmation:</br> <%= f.password_field :password_confirmation%> </p>
    <%= f.submit :Signup %>
  <% end %>
</div>